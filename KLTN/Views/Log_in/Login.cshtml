<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="~/Assets/css/login.css">
    <title>English Fullbright | Login & Registration</title>
</head>
<body>
    <div class="wrapper_01">
        <nav class="nav_01">
            <div class="nav-logo_01">
                <p>ENGLISH FULLBRIGHT</p>
            </div>
            <div class="nav-menu_01" id="navMenu">
                <ul>
                    <li><a href="#" class="link_01">Home</a></li>
                    <li><a href="#" class="link_01">Blog</a></li>
                    <li><a href="#" class="link_01">Services</a></li>
                    <li><a href="#" class="link_01">About</a></li>
                </ul>
            </div>
            <div class="nav-button_01">
                <button class="btn_01 white-btn_01" id="loginBtn" onclick="login()">Sign In</button>
                <button class="btn_01" id="registerBtn" onclick="register()">Sign Up</button>
            </div>
            <div class="nav-menu-btn_01">
                <i class="bx bx-menu" onclick="myMenuFunction()"></i>
            </div>
        </nav>

        <!----------------------------- Form box ----------------------------------->
        <div class="form-box_01">

            <!------------------- login form -------------------------->

            <div class="login-container_01" id="login">
                <div class="top_01">
                    <span>Don't have an account? <a href="#" onclick="register()">Sign Up</a></span>
                    <header>Login</header>
                </div>
                <div class="input-box_01">
                    <input type="text" class="input-field_01" placeholder="Username or Email">
                    <i class="bx bx-user"></i>
                </div>
                <div class="input-box_01">
                    <input type="password" class="input-field_01" placeholder="Password">
                    <i class="bx bx-lock-alt"></i>
                </div>
                <div class="input-box_01">
                    <input type="submit" class="submit_01" value="Sign In">
                </div>
                <div class="two-col_01">
                    <div class="one_01">
                        <input type="checkbox" id="login-check">
                        <label for="login-check"> Remember Me</label>
                    </div>
                    <div class="two_01">
                        <label><a href="#">Forgot password?</a></label>
                    </div>
                </div>
            </div>

            <!------------------- registration form -------------------------->
            <div class="register-container_01" id="register">
                <div class="top_01">
                    <span>Have an account? <a href="#" onclick="login()">Login</a></span>
                    <header>Sign Up</header>
                </div>
                <div class="two-forms_01">
                    <div class="input-box_01">
                        <input type="text" class="input-field_01" placeholder="Firstname">
                        <i class="bx bx-user"></i>
                    </div>
                    <div class="input-box_01">
                        <input type="text" class="input-field_01" placeholder="Lastname">
                        <i class="bx bx-user"></i>
                    </div>
                </div>
                <div class="input-box_01">
                    <input type="text" class="input-field_01" placeholder="Email">
                    <i class="bx bx-envelope"></i>
                </div>
                <div class="input-box_01">
                    <input type="password" class="input-field_01" placeholder="Password">
                    <i class="bx bx-lock-alt"></i>
                </div>
                <div class="input-box_01">
                    <input type="submit" class="submit_01" value="Register">
                </div>
                <div class="two-col_01">
                    <div class="one_01">
                        <input type="checkbox" id="register-check">
                        <label for="register-check"> Remember Me</label>
                    </div>
                    <div class="two_01">
                        <label><a href="#">Terms & conditions</a></label>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>

        function myMenuFunction() {
            var i = document.getElementById("navMenu");

            if (i.className === "nav-menu_01") {
                i.className += " responsive_01";
            } else {
                i.className = "nav-menu_01";
            }
        }

    </script>

    <script>

        var a = document.getElementById("loginBtn");
        var b = document.getElementById("registerBtn");
        var x = document.getElementById("login");
        var y = document.getElementById("register");

        function login() {
            x.style.left = "4px";
            y.style.right = "-520px";
            a.className += " white-btn_01";
            b.className = "btn_01";
            x.style.opacity = 1;
            y.style.opacity = 0;
        }

        function register() {
            x.style.left = "-510px";
            y.style.right = "5px";
            a.className = "btn_01";
            b.className += " white-btn_01";
            x.style.opacity = 0;
            y.style.opacity = 1;
        }

    </script>
</body>
</html>
