@{
    ViewBag.Title = "Thêm mới quản trị";
    var listnhomQuyen = ViewBag.listNhomQuyen as List<KLTN.Entities.HtNhomQuyen>;
    if (listnhomQuyen == null)
    {
        listnhomQuyen = new List<KLTN.Entities.HtNhomQuyen>();
    }
}

<div class="modal-header">
    <h5 class="modal-title" id="modalTitle">@ViewBag.Title</h5>
    <button type="button" class="close" data-dismiss="modal">
        <span>&times;</span>
    </button>
</div>

<form id="formThemMoi" method="post" action="@Url.Action("xl_them_moi","Danh_muc_Admin")" enctype="multipart/form-data">
    <div class="modal-body" id="modalBody">
        <div class="form-validation">
            <div class="row">
                <div class="col-xl-4">
                    <div class="form-group row">
                        <label class="col-lg-12 col-form-label">
                            Họ và tên (<span class="tx-danger">*</span>):
                        </label>
                    </div>
                    <div class="form-group row">
                        <div class="col-lg-12">
                            <input class="form-control" id="val_HoVaTen" name="val_HoVaTen" placeholder="Họ và tên...">
                        </div>
                        <div id="messageHoVaTen"></div>
                    </div>
                </div>
                <div class="col-xl-4">
                    <div class="form-group row">
                        <label class="col-lg-12 col-form-label">
                            Tên đăng nhập (<span class="tx-danger">*</span>):
                        </label>
                    </div>
                    <div class="form-group row">
                        <div class="col-lg-12">
                            <input class="form-control" id="val_TenDangNhap" name="val_TenDangNhap" placeholder="Tên đăng nhập...">
                        </div>
                        <div id="messageTenDangNhap"></div>
                    </div>
                </div>
                <div class="col-xl-4">
                    <div class="form-group row">
                        <label class="col-lg-12 col-form-label">
                            Nhóm quyền (<span class="tx-danger">*</span>):
                        </label>
                    </div>
                    <div class="form-group row">
                        <div class="col-lg-12">
                            <select class="form-control" id="val_PhanLoai" name="IdNhomQuyen">
                                <option value="">--Chọn nhóm quyền--</option>
                                @foreach (var item in listnhomQuyen)
                                {
                                    <option value="@item.Id">@item.Ten</option>
                                }
                            </select>
                        </div>
                        <div id="messageNhomQuyen"></div>
                    </div>
                </div>
                <div class="col-xl-5">
                    <div class="form-group row">
                        <label class="col-lg-12 col-form-label">
                            Email (<span class="tx-danger">*</span>):
                        </label>
                    </div>
                    <div class="form-group row">
                        <div class="col-lg-12">
                            <input class="form-control" id="val_email" name="val_email" placeholder="Email...">
                        </div>
                        <div id="messageEmail"></div>
                    </div>
                </div>
                <div class="col-xl-7">
                    <div class="form-group row">
                        <label class="col-lg-12 col-form-label">
                            Mật khẩu (<span class="tx-danger">*</span>):
                        </label>
                    </div>
                    <div class="form-group row">
                        <div class="col-lg-12">
                            <input type="password" class="form-control" id="pass" name="pass" placeholder="Mật khẩu...">
                        </div>
                        <div id="messagePass"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
        <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
    </div>
</form>

<script src="~/Areas/assets/js/XuLyThemTaiKhoan.js"></script>
